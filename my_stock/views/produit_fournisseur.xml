            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="produit_tmpl_id"/>
                            <field name="produit_name"/>
                            <field name="product_code"/>
                        </group>

                        <group>
                            <field name="min_qty"/>
                            <field name="price"/>
                            <field name="monnaie_id"/>
                            <field name="retard"/>
                        </group>
                        <group>
                            <field name="date_de_depart"/>
                            <field name="date_de_fin"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

